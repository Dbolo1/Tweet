            <!--android:layout_margin="@dimen/space_5"-->
            <!--android:layout_weight="1"-->
            <!--android:scaleType="centerCrop"-->
            <!--android:src="@mipmap/cat_happy" />-->

    </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_tweet_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/author" />

        <TextView
            android:id="@+id/tv_tweet_time"
            style="@style/text_view_style"
            android:lines="4"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/tv_tweet_author"
            android:text="时间" />
        <TextView
            android:id="@+id/tv_tweet_comment_number"
            android:layout_marginRight="5dp"
            android:layout_alignParentRight="true"
            android:text="@string/test_tweet_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/comments"
            />

