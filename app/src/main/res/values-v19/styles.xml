<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="AppTheme.Main" parent="AppTheme">
        <item name="android:windowTranslucentStatus">true</item>
    </style>
    <!--
      android:layout_width="0dp"
            android:src="@mipmap/cat_happy"
            android:scaleType="centerCrop"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/space_5"
            android:layout_weight="1"


    -->

    <style name="TextUtil">
        <item name="android:textSize">18sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#000</item>
    </style>
    <style name="tweet_layout_image_bg">
        <item name="android:layout_width">0dp</item>
        <item name="android:src">@mipmap/cat_happy</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">@dimen/space_5</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="text_view_style">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#c1bebe</item>
        <item name="android:singleLine">true</item>
        <item name="android:lines">1</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="tv_comments_icon_number">
        <item name="android:layout_width">0dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_gravity">center_horizontal|center_vertical</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">#f00</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="tv_and_image_home">
        <item name="android:layout_marginTop">@dimen/space_10</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">bottom|center_horizontal</item>
        <item name="android:layout_marginBottom">@dimen/space_10</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/space_60</item>

    </style>
    <style name="tv_home_bottom">

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/space_20</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#ccc</item>
    </style>
</resources>
